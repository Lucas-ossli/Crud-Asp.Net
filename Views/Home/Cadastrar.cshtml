
@model aspnet.Models.Usuario
@{
    ViewBag.Subtitulo = "Cadastrar Usuário";
}



<h1 class="text-primary">Cadastrar Usuário</h1>
<hr>
<form method="POST" class="w-25">
    <input type="hidden" asp-for="Id">
    <div class="form-group">
        <label asp-for="Nome" >Nome:</label><br>
        <input asp-for="Nome"  class="form-control">   
    </div>

    <div class="form-group">
        <label asp-for="Email" >Email:</label><br>
        <input asp-for="Email"  class="form-control" >   
    </div>
    <br>
    <div>
        <a href="/Home/Usuarios" class="btn btn-light">Cancelar</a>
    
        <button class="btn btn-primary" type="submit">Salvar</button>
        
    
    </div>

    
    
</form>


    
    

